<configuration>

    <!-- Define the log pattern -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set the root logging level to INFO and attach the appender -->
    <root level="info">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Optionally, configure specific loggers for different classes or packages -->
    <logger name="com.example" level="debug"/>
</configuration>
